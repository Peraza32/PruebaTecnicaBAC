@model VentasDemo.Models.Sale

@{
    ViewData["Title"] = "Sale details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Sale #@Model.Id</h2>
        <a asp-action="Index" asp-controller="Sale" class="btn btn-secondary">Back to Sales</a>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Summary</h5>
                    <p><strong>Date:</strong> @Model.SaleDate.ToString("g")</p>
                    <p><strong>Client:</strong> @Model.ClientName</p>
                    <p><strong>Seller (user id):</strong> @Model.UserId</p>
                    <p><strong>Total:</strong> @Model.TotalAmount.ToString("C")</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Items</h5>

                    @if (Model.SaleDetails == null || !Model.SaleDetails.Any())
                    {
                        <div class="alert alert-info">No items for this sale.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Product Id</th>
                                        <th class="text-end">Unit price</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Line total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in Model.SaleDetails)
                                    {
                                        <tr>
                                            <td>@d.ProductId</td>
                                            <td class="text-end">@d.UnitPrice.ToString("C")</td>
                                            <td class="text-end">@d.Quantity</td>
                                            <td class="text-end">@( (d.UnitPrice * d.Quantity).ToString("C") )</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>