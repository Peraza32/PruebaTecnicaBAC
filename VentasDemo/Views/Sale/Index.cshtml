@model List<VentasDemo.Models.Sale>

@{
    ViewData["Title"] = "Ventas";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-action="NewSale" asp-controller="Sale" class="btn btn-success">New Sale</a>
    </div>

    @* TempData messages are shown in the shared layout now; no static toasts here *@

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No sales found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Date</th>
                        <th>Client</th>
                        <th class="text-end">Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.Id</td>
                            <td>@s.SaleDate.ToString("g")</td>
                            <td>@s.ClientName</td>
                            <td class="text-end">@s.TotalAmount.ToString("C")</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-primary">Details</a>
                                <!-- Optional: Add Delete action or Edit if implemented -->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>