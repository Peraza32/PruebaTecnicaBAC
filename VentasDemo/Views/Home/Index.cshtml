@{
    ViewData["Title"] = "Dashboard";
    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role") ?? "user";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Welcome, @username</h2>
            <p class="text-muted">Role: <strong>@role</strong></p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Sales</h5>
                    <p class="card-text">Create and view sales</p>
                    <a asp-controller="Sale" asp-action="Index" class="btn btn-primary">Go to Sales</a>
                </div>
            </div>
        </div>

        @* Only show Products option to admin users *@
        @if ((Context.Session.GetString("Role") ?? "").ToLower() == "admin")
        {
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Products</h5>
                        <p class="card-text">Manage products (add, edit, delete)</p>
                        <a asp-controller="Product" asp-action="Products" class="btn btn-secondary">Go to Products</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
