@model List<VentasDemo.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <div>
            <a asp-action="AddProduct" asp-controller="Product" class="btn btn-success">Add Product</a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No products found.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var product in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-truncate">@product.Description</p>
                            <p class="mb-1"><strong>Price:</strong> @product.Price.ToString("C")</p>
                            <p class="mb-3"><strong>Stock:</strong> @product.Stock</p>

                            <div class="mt-auto d-flex gap-2">
                                <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@product.Id"
                                    class="btn btn-primary btn-sm">Edit</a>

                                <form asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@product.Id"
                                    method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete "
                                        @product.Name"?');">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Optional: enhance delete behavior later (AJAX delete, toasts, etc.)
    </script>
}