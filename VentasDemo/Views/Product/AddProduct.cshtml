@model VentasDemo.Models.ViewModels.AddProductViewModel

@{
  ViewData["Title"] = "Add Product";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddProduct" method="post" class="mt-4">
  <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

  <div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="Price" class="form-label"></label>
    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
    <span asp-validation-for="Price" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="Stock" class="form-label"></label>
    <input asp-for="Stock" class="form-control" type="number" min="0" />
    <span asp-validation-for="Stock" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Add Product</button>
  <a asp-action="Products" asp-controller="Product" class="btn btn-secondary ms-2">Back to list</a>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}